menu "baremetal"

config BAREMETAL
	bool "Support baremtal features"
	select MP
	help
	  This provides a command to start baremetal on slave cores, and add some features to support baremetal.

if BAREMETAL

config MASTER_CORE
	int "master core"
	default 0
	help
	  the master core number

config SYS_DDR_SDRAM_MASTER_SIZE
	hex "the memory size of master core"
	default 0x20000000
	help
	  the memory size of master core

config SYS_DDR_SDRAM_SLAVE_SIZE
	hex "the memory size of slave core"
	default 0x10000000
	help
	  the memory size of slave core

endif

config GPIO_COREID_SET
	bool "Enable GPIO for baremetal"
	depends on BAREMETAL
if GPIO_COREID_SET
config GPIO_GPIO0_COREID
	int "The core GPIO0 assigned"
	default 0

config GPIO_GPIO1_COREID
	int "The core GPIO1 assigned"
	default 0

config GPIO_GPIO2_COREID
	int "The core GPIO2 assigned"
	default 0
endif

config I2C_COREID_SET
	bool "Enable I2C for baremetal"
	depends on BAREMETAL
	default n

if I2C_COREID_SET
config SYS_I2C_MXC_I2C0_COREID
	int "The core I2C0 assigned"
	default 0

config SYS_I2C_MXC_I2C1_COREID
	int "The core I2C1 assigned"
	default 0

config SYS_I2C_MXC_I2C2_COREID
	int "The core I2C2 ssigned"
	default 0

config SYS_I2C_MXC_I2C3_COREID
	int "The core I2C3 assigned"
	default 0
endif

config IRQ_COREID_SET
	bool "Enable IRQ for baremetal"
	default n

config ICC_COREID_SET
	bool "Enable ICC for baremetal"
	default y

config QSPI_COREID_SET
	bool "Enable QSPI for baremetal"
	depends on BAREMETAL
	default n

if QSPI_COREID_SET
config QSPI_QSPI0_COREID
	int "The core QSPI0 assigned"
	default 1
endif

config FMAN_COREID_SET
	bool "Enable FMAN for baremetal"
	depends on BAREMETAL
	default n

if FMAN_COREID_SET
config FMAN_FMAN1_COREID
	int "The coer FMAN1 assigned"
	default "1"
endif

endmenu
